module include/MiniC-parenthesize

imports
  libstratego-lib
  include/MiniC


strategies
  io-MiniC-parenthesize =
    io-wrap(parenthesize-MiniC)

  parenthesize-MiniC =
    innermost(MiniCParenthesize)


rules

  MiniCParenthesize :
    Multiply(t_0, t_1) -> Multiply(Parenthetical(t_0), t_1)
    where <(?And(_, _)
            + ?Lt(_, _)
            + ?Subtract(_, _)
            + ?Add(_, _)
            + fail)> t_0

  MiniCParenthesize :
    Multiply(t_0, t_1) -> Multiply(t_0, Parenthetical(t_1))
    where <(?And(_, _)
            + ?Lt(_, _)
            + ?Subtract(_, _)
            + ?Add(_, _)
            + ?Multiply(_, _)
            + fail)> t_1

  MiniCParenthesize :
    Uplus(t_0) -> Uplus(Parenthetical(t_0))
    where <(?And(_, _)
            + ?Lt(_, _)
            + ?Subtract(_, _)
            + ?Add(_, _)
            + ?Multiply(_, _)
            + fail)> t_0

  MiniCParenthesize :
    Uminus(t_0) -> Uminus(Parenthetical(t_0))
    where <(?And(_, _)
            + ?Lt(_, _)
            + ?Subtract(_, _)
            + ?Add(_, _)
            + ?Multiply(_, _)
            + fail)> t_0

  MiniCParenthesize :
    Subtract(t_0, t_1) -> Subtract(Parenthetical(t_0), t_1)
    where <(?And(_, _)
            + ?Lt(_, _)
            + fail)> t_0

  MiniCParenthesize :
    Subtract(t_0, t_1) -> Subtract(t_0, Parenthetical(t_1))
    where <(?And(_, _)
            + ?Lt(_, _)
            + ?Subtract(_, _)
            + ?Add(_, _)
            + fail)> t_1

  MiniCParenthesize :
    Add(t_0, t_1) -> Add(Parenthetical(t_0), t_1)
    where <(?And(_, _)
            + ?Lt(_, _)
            + fail)> t_0

  MiniCParenthesize :
    Add(t_0, t_1) -> Add(t_0, Parenthetical(t_1))
    where <(?And(_, _)
            + ?Lt(_, _)
            + ?Add(_, _)
            + ?Subtract(_, _)
            + fail)> t_1

  MiniCParenthesize :
    Lt(t_0, t_1) -> Lt(Parenthetical(t_0), t_1)
    where <(?And(_, _)
            + ?Lt(_, _)
            + fail)> t_0

  MiniCParenthesize :
    Lt(t_0, t_1) -> Lt(t_0, Parenthetical(t_1))
    where <(?And(_, _)
            + ?Lt(_, _)
            + fail)> t_1

  MiniCParenthesize :
    And(t_0, t_1) -> And(t_0, Parenthetical(t_1))
    where <(?And(_, _) + fail)> t_1

  MiniCParenthesize :
    StructMember(t_0, t_1) -> StructMember(t_0, Parenthetical(t_1))
    where <(?StructMember(_, _) + fail)> t_1


signature
  constructors
    Parenthetical : Unknown -> Unknown

